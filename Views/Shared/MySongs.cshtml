@{
    Layout = null;    
}

<h2>Upload Song</h2>

<div class="container">
    <form action="/Song/Add" method="post" enctype="multipart/form-data" target="_blank" class="form-horizontal">
        <input type="file" name="songs" multiple class="form-control" required="required"/><br /><br>
        Title <input type="text" name="title" required="required" class="form-control"/><br /><br />
        Singer <input type="text" name="singer" class="form-control"/><br /><br />
        Release Year <input type="text" name="year" class="form-control"/><br /><br />
        <input type="submit" class="btn btn-primary" value="Upload Song"/>
    </form>
</div>