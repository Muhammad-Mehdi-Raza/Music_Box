@model Term_Project.Models.Song
@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit Song</title>
</head>
<body>
    <div class="container">
        @using (Html.BeginForm("EditS", "Admin", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.HiddenFor(m => m.Id)
            <br><br>
            @Html.LabelFor(m => m.Title)
            @Html.EditorFor(m => m.Title, new { @class = "form-control", required = "required" })

            <br><br>
            @Html.LabelFor(m => m.Singer)
            @Html.EditorFor(m => m.Singer, new { @class = "form-control" })
            
            <br><br>
            @Html.LabelFor(m => m.ReleaseYear)
            @Html.EditorFor(m => m.ReleaseYear, new { @class = "form-control" })
            <br /><br>
            <input type="submit" value="Save" class="btn btn-success" />
        }

    </div>
</body>
</html>
