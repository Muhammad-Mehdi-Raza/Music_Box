@model Term_Project.Models.UserProfile

@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit User Profile</title>
</head>
<body>
    <div class="container">
        @using (Html.BeginForm("Edit", "Admin", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <br />
            @Html.HiddenFor(m => m.UserId)
            @Html.LabelFor(m => m.UserName)
            @Html.EditorFor(m => m.UserName, new { @class = "form-control", required = "required" })
            <br /><br />
            @Html.LabelFor(m => m.Password)
            @Html.EditorFor(m => m.Password, new { @class = "form-control", required = "required" })
            <br /><br />
            <input type="submit" value="Save Details" class="btn btn-success" />
        }

    </div>
</body>
</html>
